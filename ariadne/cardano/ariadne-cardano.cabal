name:           ariadne-cardano
version:        0.2.0.0
description:    Please see the README on Github at <https://github.com/serokell/ariadne#readme>
homepage:       https://github.com/serokell/ariadne#readme
bug-reports:    https://github.com/serokell/ariadne/issues
license:        MPL-2.0
license-file:   COPYING.md
author:         @serokell
maintainer:     Serokell <hi@serokell.io>
build-type:     Simple
cabal-version:  >= 1.10

source-repository head
  type: git
  location: https://github.com/serokell/ariadne

library
  hs-source-dirs:
      src
  build-depends:
      base >=4.7 && <5
    , acid-state
    , ansi-wl-pprint
    , ariadne-core
    , async
    , beam-core
    , beam-migrate
    , beam-sqlite
    , bytestring
    , Cabal
    , cardano-crypto
    , cardano-sl
    , cardano-sl-binary
    , cardano-sl-block
    , cardano-sl-client
    , cardano-sl-core
    , cardano-sl-crypto
    , cardano-sl-db
    , cardano-sl-generator
    , cardano-sl-infra
    , cardano-sl-networking
    , cardano-sl-ssc
    , cardano-sl-txp
    , cardano-sl-update
    , cardano-sl-util
    , componentm
    , conduit
    , constraints
    , containers
    , contravariant
    , cryptonite
    , data-default
    , dhall
    , directory
    , Earley
    , exceptions
    , file-embed
    , filepath
    , formatting
    , http-client
    , http-client-tls
    , insert-ordered-containers
    , ixset-typed
    , knit
    , lens
    , log-warper
    , loot-crypto
    , megaparsec
    , memory
    , MissingH
    , monad-control
    , mtl
    , named
    , natural-transformation
    , ntype
    , optparse-applicative
    , process
    , QuickCheck
    , resourcet
    , retry
    , safe
    , safe-exceptions
    , safecopy
    , scientific
    , serokell-util
    , spoon
    , sqlite-simple
    , sqlite-simple-errors
    , stm
    , template-haskell
    , text
    , text-format
    , time
    , time-units
    , transformers
    , transformers-base
    , universum
    , unliftio
    , unliftio-core
    , unordered-containers
    , vector
    , vinyl
    , yaml
  exposed-modules:
      Ariadne.Cardano.Knit
      Ariadne.Cardano.Backend
      Ariadne.Cardano.Face
      Ariadne.Cardano.Orphans

      Ariadne.Config.Wallet
      Ariadne.Config.Ariadne
      Ariadne.Config.CLI
      Ariadne.Config.Cardano
      Ariadne.Config.History
      Ariadne.Config.Update
